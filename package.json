{
  "name": "@vodyani/ark",
  "license": "MIT",
  "version": "0.0.0",
  "author": "ChoGathK",
  "description": "â˜„ When you choose Ark, you get near-unlimited configuration control. When you log in to Ark, you'll be able to quickly handle configuration loading, merging, and listening in vodyani or any other nestjs-based application, and Ark will provide you limitless access to the configuration center.",
  "homepage": "https://github.com/vodyani/ark#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vodyani/ark.git"
  },
  "keywords": [
    "vodyani",
    "nodejs",
    "jest",
    "nestjs",
    "javascript",
    "typescript",
    "npm-package"
  ],
  "bugs": {
    "url": "https://github.com/vodyani/ark/issues"
  },
  "files": [
    "package.json",
    "README.MD",
    "LICENSE",
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "install:all": "npm i && npm i @vodyani/eslint-config -D && npx husky install",
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src ./test && tsc",
    "lint:fix": "eslint --fix --ext .ts src/ test/",
    "lint:html-report": "eslint ./src ./test -f html -o eslint-report.html",
    "lint:json-report": "eslint ./src ./test -f json -o eslint-report.json"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@vodyani"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/test/.spec.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "./node_modules/(?!(lodash-es|other-es-lib))"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@nestjs/testing": "8.4.1",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/lodash": "4.14.180",
    "@types/node": "16.11.26",
    "@types/supertest": "2.0.11",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "typescript": "4.6.2"
  }
}
