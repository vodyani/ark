{
  "name": "@vodyani/ark",
  "license": "MIT",
  "version": "8.0.2",
  "author": "ChoGathK",
  "description": "ðŸ›¸ ark is the configuration management solution of vodyani. By accessing ark, you can have maximum control over your local configuration, and if you want, ark can support unlimited configuration remote client.",
  "homepage": "https://github.com/vodyani/ark#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vodyani/ark.git"
  },
  "keywords": [
    "vodyani",
    "nodejs",
    "config",
    "remote-config-center",
    "nestjs",
    "javascript",
    "typescript",
    "npm-package"
  ],
  "bugs": {
    "url": "https://github.com/vodyani/ark/issues"
  },
  "files": [
    "package.json",
    "README.MD",
    "LICENSE",
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "install:all": "npm ci && npm i @vodyani/eslint-config -D && npx husky install",
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src ./test && tsc",
    "lint:fix": "eslint --fix --ext .ts src/ test/",
    "lint:html-report": "eslint ./src ./test -f html -o eslint-report.html",
    "lint:json-report": "eslint ./src ./test -f json -o eslint-report.json"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@vodyani"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/test/.spec.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "./node_modules/(?!(lodash-es|other-es-lib))"
    ]
  },
  "dependencies": {
    "@nestjs/common": "8.4.4",
    "@vodyani/core": "^8.4.4",
    "@vodyani/transformer": "0.5.3",
    "chokidar": "3.5.3",
    "lodash": "4.17.21",
    "object-hash": "3.0.0"
  },
  "peerDependencies": {
    "chokidar": "3.5.3"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@nestjs/testing": "8.4.4",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/lodash": "4.14.181",
    "@types/node": "16.11.26",
    "@types/object-hash": "2.2.1",
    "@types/supertest": "2.0.12",
    "@vodyani/eslint-config": "1.0.6",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "supertest": "6.2.2",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  }
}
